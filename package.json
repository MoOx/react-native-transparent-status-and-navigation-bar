{
  "name": "react-native-transparent-status-and-navigation-bar",
  "version": "2.0.0",
  "description": "Easily handle transparent status and navigation bar for React Native apps",
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/MoOx/react-native-transparent-status-and-navigation-bar",
  "funding": "https://github.com/MoOx/react-native-transparent-status-and-navigation-bar?sponsor=1",
  "license": "MIT",
  "keywords": [
    "react-native",
    "android",
    "transparent",
    "navigation",
    "status-bar"
  ],
  "main": "dist/commonjs/index",
  "module": "dist/module/index",
  "react-native": "src/index",
  "source": "src/index",
  "types": "dist/typescript/index.d.ts",
  "files": [
    "android",
    "src",
    "dist",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/__tests__",
    "!android/build",
    "!dist/typescript/example"
  ],
  "scripts": {
    "format": "prettier '**/*.{js,json,md,ts,tsx}' --write",
    "release": "npmpub",
    "prepare": "bob build",
    "test": "npm run test:lib && npm run test:example",
    "test:example": "cd example && npm ci && cd android && ./gradlew bundleRelease",
    "test:lib": "cd android && ./gradlew assembleRelease"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-native": ">=0.65.2"
  },
  "devDependencies": {
    "@types/react-native": "^0.66.4",
    "npmpub": "^5.0.0",
    "prettier": "^2.4.1",
    "react": "17.0.2",
    "react-native": "0.66.3",
    "react-native-builder-bob": "^0.18.2",
    "typescript": "^4.4.4"
  }
}
